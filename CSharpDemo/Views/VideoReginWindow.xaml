<Window
    x:Class="CSharpDemo.Views.VideoReginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mk="clr-namespace:WPFMediaKit.DirectShow.Controls;assembly=WPFMediaKit"
    Title="VideoReginWindow"
    Width="1920"
    Height="1080"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <mk:VideoCaptureElement x:Name="DeviceCamera" />

        <TextBlock
            x:Name="ModeTextBlock"
            Margin="0,300,0,0"
            HorizontalAlignment="Center"
            FontFamily="宋体"
            FontSize="30"
            Text="算法模式：" />

        <Canvas x:Name="RectangleCanvas" />
    </Grid>
</Window>