<Window
    x:Class="CSharpDemo.Views.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginWindow"
    Width="1280"
    Height="720"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/CSharpDemo;component/Image/start_background.png" Stretch="UniformToFill" />
        </Grid.Background>

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <Image
                Width="458"
                Height="330"
                Source="/CSharpDemo;component/Image/start_icon2.png" />
            <TextBlock
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                FontFamily="仿宋"
                FontSize="38"
                FontWeight="Bold"
                Text="中国航天科工二院二〇三所" />

            <ProgressBar
                x:Name="LoadingProgress"
                Margin="0,10"
                Maximum="200" />
        </StackPanel>
    </Grid>
</Window>
