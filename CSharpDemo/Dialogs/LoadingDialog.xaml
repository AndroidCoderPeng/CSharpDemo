<Window
    x:Class="CSharpDemo.Dialogs.LoadingDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wgt="clr-namespace:CSharpDemo.Widgets"
    Width="300"
    Height="300"
    AllowsTransparency="True"
    Background="Transparent"
    Closed="LoadingDialog_OnClosed"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Margin="3"
        Background="White"
        CornerRadius="5">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="5"
                Direction="0"
                Opacity="0.5"
                ShadowDepth="0"
                Color="Blue" />
        </Border.Effect>
        <Grid>
            <wgt:LoadingView x:Name="LoadingView" LoadingText="数据计算中，请稍后..." />
        </Grid>
    </Border>
</Window>
