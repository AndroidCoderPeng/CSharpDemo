<Page
    x:Class="CSharpDemo.Pages.DelegateValuePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DelegateValuePage"
    d:DesignHeight="600"
    d:DesignWidth="800"
    Background="White"
    DataContext="{Binding DelegateValue, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <DockPanel VerticalAlignment="Center">
        <Button
            Margin="5,0,0,0"
            Command="{Binding DelegateCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Page}}"
            Content="打开窗口1" />

        <TextBox
            Height="30"
            Margin="5,0"
            Text="{Binding DelegateValue}" />
    </DockPanel>
</Page>